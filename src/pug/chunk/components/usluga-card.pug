mixin uslugaCard(name,text,img)
  a(href="#").usluga-card__link
    .usluga-card
      .usluga-card__top
        .usluga-card__img
          img(src="./img/" + img + ".png")
      .usluga-card__main
        .usluga-card__head
          h3=name
        .usluga-card__bottom
          .usluga-card__text
            p=text
          .usluga-card__price
            span от 700 руб/мес
          .usluga-card__btn
            span Подключить
